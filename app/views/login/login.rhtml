<h2>Please Log In</h2>

<form action="/login/login" method="post">
  <p>
    <label for="name">Name:</label>
    <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    <label for="password">Password:</label>
    <%= password_field_tag :password, params[:password] %>
  </p>
  
  <p>
    <%= submit_tag "Login" %>
  </p>
</form>
