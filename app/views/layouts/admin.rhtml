<html>
<head>
  <meta equiv="Content-type" content="text/html; charset=utf-8" />
  <title>Admin: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'scaffold', 'books' %>
  <%= javascript_include_tag :defaults %>
</head>

<body>
<div id="wrap">
  <div id="header">
    <h1 id="page_title" title="Patrick's Library">
      <span>Patrick's Library</span>
    </h1>
  </div>

  <div style="float:right">
    logged-in as <%= @user.name %>
    (<%= link_to 'logout', :controller => "login", :action => 'logout' %>)
  </div>
  
  <%= render :partial => 'sidebar' %>

  <% if flash_notice = flash[:notice] %>
    <p style="color: green"><%= flash_notice %></p>
  <% end %>

  <%= yield  %>
</div>
</body>

</html>
